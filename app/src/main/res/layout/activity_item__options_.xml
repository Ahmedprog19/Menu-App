<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Item_Options_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center">
        <TextView
            android:id="@+id/one_item_name_view_full_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:fontFamily="casual"
            android:text="Name : "
            android:textSize="25dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/one_item_name_view_full2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Item Name"
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="normal" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/text_id2"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/one_item_price_view_full_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Price : "
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/one_item_price_view_full2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Item price"
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="normal" />


    </LinearLayout>


    <ImageView
        android:id="@+id/one_item_view_full2"
        android:layout_width="match_parent"
        android:layout_height="562dp"
        android:layout_below="@+id/text_id2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginRight="-2dp"
        android:src="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/delete_item_btn"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="58dp"
        android:layout_marginBottom="191dp"
        android:background="@drawable/delete_btn"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Delete Item"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>